@page
@model ETBD.Pages.MyActions.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Food Actions</h1>

<p>
    <a asp-page="Create" class="btn btn-success">Add new action</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Action[0].Name)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Action) 
{
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.Id" class="btn btn-info">Edit</a> 
                <a asp-page="./Details" asp-route-id="@item.Id" class="btn btn-warning">Details</a> 
                <a asp-page="./Delete" asp-route-id="@item.Id" class="btn btn-danger">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
