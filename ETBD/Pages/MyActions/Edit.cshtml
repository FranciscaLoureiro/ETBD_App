@page
@model ETBD.Pages.MyActions.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit Action</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Action.Id" />
            <div class="form-group">
                <label asp-for="Action.Name" class="control-label"></label>
                <input asp-for="Action.Name" class="form-control" />
                <span asp-validation-for="Action.Name" class="text-danger"></span>
            </div>
            <hr />
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
<hr />
<div>
    <a asp-page="./Index">Back to all actions</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
