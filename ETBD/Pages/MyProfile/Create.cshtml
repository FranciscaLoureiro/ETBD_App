}
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Profile.FirstName" class="control-label"></label>
                <input asp-for="Profile.FirstName" class="form-control" />
                <span asp-validation-for="Profile.FirstName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Profile.LastName" class="control-label"></label>
                <input asp-for="Profile.LastName" class="form-control" asp-items="ViewBag.CategoryId"></input>
                <span asp-validation-for="Profile.LastName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Profile.BirthDate" class="control-label"></label>
                <input type="date" asp-for="Profile.BirthDate" class="form-control" asp-items="ViewBag.CategoryId"></input>
                <span asp-validation-for="Profile.BirthDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Profile.Weight" class="control-label"></label>
                <input asp-for="Profile.Weight" class="form-control" asp-items="ViewBag.CategoryId"></input>
                <span asp-validation-for="Profile.Weight" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Profile.Height" class="control-label"></label>
                <input asp-for="Profile.Height" class="form-control" asp-items="ViewBag.CategoryId"></input>
                <span asp-validation-for="Profile.Height" class="text-danger"></span>
            </div>
            
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

