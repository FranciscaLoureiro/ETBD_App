@model ETBD.Pages.MyProfile.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Profile[0].FirstName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Profile[0].LastName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Profile[0].BirthDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Profile[0].Age)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Profile[0].Weight)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Profile[0].Height)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Profile[0].BMI)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Profile[0].User)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Profile) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.FirstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LastName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.BirthDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Age)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Weight)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Height)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.BMI)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.User.Id)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.Id">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
