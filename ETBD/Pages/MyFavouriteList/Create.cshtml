@page
@model ETBD.Pages.MyFavouriteList.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h1>Favourite List</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="FavouriteList.FoodId" class="control-label"></label>
                <select asp-for="FavouriteList.FoodId" class ="form-control" asp-items="ViewBag.FoodId"></select>
            </div>
            <br />
            <div class="form-group">
                <input type="submit" value="Add" class="btn btn-success" />
            </div>
        </form>
    </div>
</div>
<br />
<div>
    <a asp-page="Index" class="btn btn-secondary">Back</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
