@page
@model ETBD.Pages.MyFavouriteList.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Favourite List</h1>

<p>
    <a asp-page="Create" class="btn btn-success">Add new food</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.FavouriteList[0].Date)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FavouriteList[0].Food)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.FavouriteList) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Date)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Food.Name)
            </td>
            <td>
                <a asp-page="./Delete" asp-route-id="@item.Id" class="btn btn-danger">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
