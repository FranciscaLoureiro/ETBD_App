@page
@model ETBD.Pages.MyMeals.AddFoodToMealModel
@{
}
<h1>@Model._MealId</h1>
<form method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <input type="hidden" asp-for="_MealId" />
    <div class="form-group">
        <label asp-for="SelectedFoodId" class="control-label"></label>
        <select asp-for="SelectedFoodId" class ="form-control" asp-items="@Model.Foods">
            <option value="0">--Select Food--</option>
        </select>
    </div>
    <div class="form-group">
        <label asp-for="FoodMeal.PortionQuantity" class="control-label"></label>
        <input asp-for="FoodMeal.PortionQuantity" class="form-control"/>
        <span asp-validation-for="FoodMeal.PortionQuantity" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="FoodMeal.PortionUnit" class="control-label"></label>
        <input asp-for="FoodMeal.PortionUnit" class="form-control"/>
        <span asp-validation-for="FoodMeal.PortionUnit" class="text-danger"></span>
    </div>
    <div class="form-group">
        <input type="submit" value="Add" class="btn btn-success" />
        <a asp-page="./Index" class="btn btn-secondary">Done</a>
    </div>
</form>
