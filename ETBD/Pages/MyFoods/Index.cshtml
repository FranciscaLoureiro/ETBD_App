@page
@model ETBD.Pages.MyFoods.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Foods</h1>

<p>
    <a asp-page="Create" class="btn btn-success">Add new food</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Food[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Food[0].Category)
            </th>
            <th>
                Actions
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>

@for(var i = 0; i < Model.Food.Count(); i++) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => Model.Food[i].Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => Model.Food[i].Category.Name)
            </td>
            <td>
                <ul>
                    @foreach (var action in Model.FoodActionsList[i].Actions)
                    {
                        <li>
                            @action.Name
                        </li>
                    }
                </ul>
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@Model.Food[i].Id" class="btn btn-info">Edit</a> 
                <a asp-page="./Details" asp-route-id="@Model.Food[i].Id" class="btn btn-warning">Details</a> 
                <a asp-page="./Delete" asp-route-id="@Model.Food[i].Id" class="btn btn-danger">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
